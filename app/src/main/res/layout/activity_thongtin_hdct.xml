<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="48dp"
    android:layout_marginRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_maHDCT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="100">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_maHDCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inforHDCT_hint_enter_maHDCT" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/inforBook_hint_enter_maSach" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnmaSach"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_soLuong"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="100">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_soLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inforHDCT_hint_enter_soluong" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>