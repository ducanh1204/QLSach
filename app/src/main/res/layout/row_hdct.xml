<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHoadon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/hdct" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/imgHoadon"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvtitle_maHDCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maHDCT_title" />

                <TextView
                    android:id="@+id/tvtitle_soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvtitle_maHDCT"
                    android:layout_marginTop="8dp"
                    android:text="@string/HDCT_title_count" />

                <TextView
                    android:id="@+id/haicham1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/haicham2"
                    android:text="@string/dauhaicham" />

                <TextView
                    android:id="@+id/haicham2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvtitle_soluong"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tvtitle_soluong"
                    android:text="@string/dauhaicham" />

                <TextView
                    android:id="@+id/tvMaHDCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tvSoluong"
                    android:textColor="@color/textblack" />

                <TextView
                    android:id="@+id/tvSoluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/haicham2"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/haicham2"
                    android:textColor="@color/textblack" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgDeleteHDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/delete_icon" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>